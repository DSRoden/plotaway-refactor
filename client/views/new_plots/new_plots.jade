div
  form.form-horizontal(name='_form', ng-submit='submit(_form)', nonvalidate)
      .modal-header.plot-header
        button.close(type='button', ng-click='dismiss()', aria-hidden='true') Ã—
        h3 New Plot
        label Description:
        input.form-control(name='description', type='text', ng-model='form.description', required, placeholder='required')
      .modal-body.plot-body
        .form-group(ng-class='{error: _form.title.$error && _form.submitted}')
          .col-lg-9.col-md-9
            label Date:
            span &nbsp &nbsp
            input(type='date',ng-model='date.date')
            span &nbsp &nbsp
            label Time:
            span &nbsp &nbsp
            input(type='time',ng-model='date.time')
            br
            br
            label Category:
            select.form-control(name='category', type='text', ng-model='form.category', placeholder='category', required)
              option(value='Other') Other
              option(value='Accomodations') Accomodations
              option(value='Transportation') Transportation
              option(value='Eating') Eating
              option(value='Sightseeing') Sightseeing
              option(value='Activity') Activity
              option(value='Shopping') Shopping
              br
            label Priority Level:
            select.form-control(name='priority', type='text', ng-model='form.priority')
              option(value='Low') Low
              option(value='Medium') Medium
              option(value='High')  High
              br
            label Cost:
            input.form-control(name='description', type='number', ng-model='form.cost')

      .modal-footer.plot-footer
        a.btn.btn-default.pull-left(ng-click='dismiss()', tabindex='-1')
          i.glyphicon.glyphicon-remove
          | Cancel
        button.btn.submit-btn-plots(ng-show='_form.$valid', type='submit')
          i.glyphicon.glyphicon-ok
          | Save

